extends _layout

block head
  link(rel='stylesheet', href='/data-viz.css')
  link(rel='stylesheet', href='/sunburst.css')

  script(src='/templates.js')
  script(src='/utils.js')
  script(src='/calculate.js')
  script(src='/controls.js')
  script(src='/time-selector.js')
  script(src='/sunburst-controller.js')
  script(src='/sunburst.js')

block content
  .page-container
    #nav
      ul
        li.active
          a(href='/sunburst')<i class="fa fa-pie-chart"></i> Deep Dive
        li
          a(href='/line-graph')<i class="fa fa-line-chart"></i> Overview
        li
          a(href='/engagement-list')<i class="fa fa-cogs"></i> Specifics

    #controls
      .control
        h4 Strategy
        form
          label
            input.strategy-input(type='radio', name='strategy-type', value='pillar', checked)
            | Pillar
          label
            input.strategy-input(type='radio', name='strategy-type', value='authority')
            | Authority
      .control
        h4 View Model
        form
          label
            input.view-model-input(type='radio', name='model-by', value='influence', checked)
            | Impact
          label
            input.view-model-input(type='radio', name='model-by', value='count')
            | Post Frequency
      #time-selector

    #key

    .graphic-container
      #graphic

    .drawer
      .details
