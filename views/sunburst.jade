extends _layout

block head
  link(rel='stylesheet', href='/data-viz.css')
  link(rel='stylesheet', href='/sunburst.css')
  script(src='/utils.js')
  script(src='/calculate.js')
  script(src='/sunburst-controller.js')
  script(src='/sunburst.js')

block content
  .page-container
    .graphic-container
      #graphic
    .drawer
      ul#breadcrumb
      .details
      .controls
        section.control
          h4 Strategy
          form
            label
              input(type='radio', name='strategy-type', value='pillar', checked)
              | Pillar
            label
              input(type='radio', name='strategy-type', value='authority')
              | Authority
        section.control
          h4 Scale By
          form
            label
              input.scale-input(type='radio', name='scale-by', value='influence', checked)
              | Influence
            label
              input.scale-input(type='radio', name='scale-by', value='count')
              | Count
